FROM nginx:1.27-alpine

# Copy nginx config
COPY nginx.conf /etc/nginx/nginx.conf

# Copy static assets and templates into a single html root
# Note: Jinja templates are rendered by FastAPI normally, but for containerized
# split front/back, we serve the HTML directly as static pages.
COPY app/static /usr/share/nginx/html/static
COPY app/templates/*.html /usr/share/nginx/html/

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

